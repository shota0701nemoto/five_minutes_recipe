- if user_signed_in?

  -unless post.like_user(current_user.id).blank? # 空白（blank）ではない時（unless）、実行する。いいねしてるかどうか。like_userメソッドを自作？
    = link_to post_likes_path(post_id: post.id, id: post.likes[0].id), method: :delete, remote: true do
      .vertical_like
        = link_to "#", class: "star-btn" do
          = icon('fas', 'star')
        %span.star-btn
          = post.likes_count
  -else
    = links_to post_likes_path(post.id), method: :post, remote: true do
      .vertical_like
        = link_to "#", class: "star-btn" do
          = icon('fas', 'star')
        %span.white-star-btn
          = post.likes_count
- else

  - if post.likes_count > 0
    .vertical_like
      = link_to "#", class: "star-btn" do
        = icon('fas', 'star')
      %span.star-btn
        = post.likes_count
  - else
    .vertical_like
      = link_to "#", class: "star-btn" do
        = icon('fas', 'star')
      %span.white-star-btn
        = post.likes_count

  
    
